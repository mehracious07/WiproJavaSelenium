package LabSession02082025;

import java.util.Arrays;

class SortThread extends Thread {
    int[] arr;
    int start, end;

    public SortThread(int[] arr, int start, int end) {
        this.arr = arr;
        this.start = start;
        this.end = end;
    }

    public void run() {
        Arrays.sort(arr, start, end + 1);
        for(int i=0;i<arr.length;i++) {
        	System.out.print(i+" ");
        }
    	System.out.println();  
        
    }
}

public class sort_array {
    public static void main(String[] args) {
        int[] arr = {8, 3, 5, 1, 9, 2, 7, 4, 6, 0};

        int mid = arr.length / 2;

        SortThread t1 = new SortThread(arr, 0, mid - 1);      
        SortThread t2 = new SortThread(arr, mid, arr.length - 1);  

        t1.start();
        t2.start();

        try {
            t1.join();
            t2.join();
        } catch (InterruptedException e) {
            e.printStackTrace();
        }

        // Merge the two sorted halves
        int[] sorted = merge(arr, 0, mid - 1, mid, arr.length - 1);
        System.out.println("Sorted Array: " + Arrays.toString(sorted));
    }
}

